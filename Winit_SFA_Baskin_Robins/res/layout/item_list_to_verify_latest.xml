<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvOrdersheetHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:textColor="@color/white"
        android:textSize="@dimen/customer_text_size" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvItemList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textColor="@color/white"
            android:textSize="17dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/round_transparent_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Username"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />

            <TextView
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Baskin"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Date"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />

            <TextView
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Date"
                android:textColor="@color/blue_dark" />

            <TextView
                android:id="@+id/tvVehicleCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="VehicleCode"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="65dip"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="MO"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />

            <TextView
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/blue_dark"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvMo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="MO No"
                android:textColor="@color/blue_dark" />

            
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smallbg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvItemCode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:text="@string/Item_Code_Description"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvCases"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="UOM"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        
        <TextView
             android:id="@+id/tvRequestedUnits"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Req.Qty"
            android:textColor="@color/white"
            android:textSize="12dip" 
            android:visibility="gone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
             />
        
        <TextView
            android:id="@+id/tvRecivedUnits"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Apvd.Qty"
            android:textColor="@color/white"
            android:textSize="12dip" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />
         <TextView
            android:id="@+id/tvUnits"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Recv.Qty"
            android:textColor="@color/white"
            android:textSize="12dip" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <ImageView
            android:id="@+id/ivCheckAllItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:layout_marginTop="3dip"
            android:layout_weight="0"
            android:background="@color/ashColor"
            android:padding="1dip"
            android:src="@drawable/check_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoItemFound"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:text="@string/No_matching_record_found"
        android:textColor="@color/list_middle"
        android:textSize="20dip"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llordersheet"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/basefooter"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_base" />

        <Button
            android:id="@+id/btnOrdersheetReport"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/icon4"
            android:drawableRight="@drawable/sep_base"
            android:text="Report "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/scan"
            android:drawableRight="@drawable/sep_base"
            android:text="Scan "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/add"
            android:drawableRight="@drawable/sep_base"
            android:text="Add "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/print"
            android:drawableRight="@drawable/sep_base"
            android:text="Print "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/cont"
            android:text="Continue "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/cont"
            android:text="Finish "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnOrdersheetVerify"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/check5"
            android:text="Verify "
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>