<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:id="@+id/llCellClick"
        android:layout_width="fill_parent"
        android:layout_height="42dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip" >

            <TextView
                android:id="@+id/tvProductKey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/list_title"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVendorName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13dip" />
        </LinearLayout>

        <EditText
            android:id="@+id/etUOM"
            android:layout_width="65dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold" 
            android:hint="0"
            android:ellipsize="start"/>
<EditText
            android:id="@+id/requestedUnits"
            android:layout_width="65dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold" 
            android:hint="0"
            android:ellipsize="start"
            android:visibility="gone"/>
        
        <EditText
            android:id="@+id/etQty"
            android:layout_width="65dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold" 
            android:hint="0"
            android:ellipsize="start"/>
        <EditText
            android:id="@+id/receivedQty"
            android:layout_width="65dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold" 
            android:hint="0"
            android:ellipsize="start"
            />

        <ImageView
            android:id="@+id/ivAcceptCheckItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="0"
            android:src="@drawable/check_normal" />
        
    </LinearLayout>

</LinearLayout>