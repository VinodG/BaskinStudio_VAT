<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="fill_parent"
        android:layout_height="41dip"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_action_left"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="3dip" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="2dip"
            android:paddingTop="2dip"
            android:textColor="@color/white"
            android:textSize="@dimen/customer_text_size" />

        <ImageView
            android:id="@+id/iv_directions"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_margin="3dip"
            android:background="@drawable/ic_menu_click" />

        <ImageView
            android:id="@+id/iv_action_right"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="3dip"
            android:background="@drawable/ic_nav_back" />
    </LinearLayout>

    <fragment
        android:id="@+id/map1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</LinearLayout>