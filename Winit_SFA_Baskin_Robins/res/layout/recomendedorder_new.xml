<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/svScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <include layout="@layout/recommendedorderheader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_10dip"
                android:id="@+id/ll_is_tax_enable_in_ret">
                <TextView
                    android:id="@+id/tvTaxEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Is Tax Enable : Active "/>
                <ImageView
                    android:id="@+id/ckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_hover"
                    android:layout_marginLeft="@dimen/margin_10dip"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLayoutMiddle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llTotalValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/btnAddIetem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/btn_verify_click"
            android:text="@string/AddItem"
            android:textColor="@color/white"
            android:visibility="gone" />

        <View
            android:id="@+id/vLine"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/dot_seperator" />

        <LinearLayout
            android:id="@+id/llPricing"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/round_transparent_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llOverduelimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvOverduelimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Ovd"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=":"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvOverduelimitVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAvailablelimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvAvailablelimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Avail"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=":"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvAvailablelimitVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCreditLimit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvCreditLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Crd"
                        android:ems="2"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=":"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvCreditLimitVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/amt_color"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llOrderVal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tvOrder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/Order_value"
                        android:textColor="#454545"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tvOrderValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:inputType="number"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="AED 0.00"
                        android:textColor="#454545"
                        android:textSize="12dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvDisHeader"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Discount Value:"
                        android:textColor="#454545"
                        android:textSize="12dip"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/etDiscValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:imeOptions="actionDone"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="AED 0.00"
                        android:textColor="#454545"
                        android:textSize="12dip"
                        android:visibility="visible" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Tax Value:"
                        android:textColor="#454545"
                        android:textSize="12dip"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/etTaxVal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:imeOptions="actionDone"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="AED 0.00"
                        android:textColor="#454545"
                        android:textSize="12dip"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvHeaderText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/Total_value"
                        android:textColor="@color/amt_color"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/evTotalValue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:inputType="number"
                        android:padding="1dip"
                        android:singleLine="true"
                        android:text="AED 0.00"
                        android:textColor="@color/amt_color"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/basefooter"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/sep_base" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/icon5"
                android:drawablePadding="3dip"
                android:gravity="center_vertical"
                android:text="@string/Submit"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/icon3"
                android:drawablePadding="3dip"
                android:gravity="center_vertical"
                android:paddingRight="1dip"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnReturnRequestPayment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight=".70"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/confirm"
                android:drawablePadding="5dip"
                android:paddingRight="7dip"
                android:text="@string/Payment_Confirm"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReturnSave"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/basefooter"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_base" />

        <Button
            android:id="@+id/btnAddFOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/add"
            android:drawableRight="@drawable/sep_base"
            android:gravity="center"
            android:text="FOC Items "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/scan"
            android:drawableRight="@drawable/sep_base"
            android:text="  Scan  "
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAddItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/add"
            android:gravity="center"
            android:text="Add Items "
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/icon3"
            android:gravity="center_vertical"
            android:text="Cancel "
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_base" />

        <Button
            android:id="@+id/btnFinalize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/icon5"
            android:gravity="center"
            android:text="Finalize "
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>