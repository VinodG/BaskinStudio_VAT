<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dip"
    android:layout_marginRight="7dip"
    android:background="@drawable/round_transparent_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitlePopup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_header"
        android:gravity="center"
        android:text="Applicable Schemes"
        android:textColor="@color/white"
        android:textSize="17dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ScrollView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:fadingEdge="none"
            android:scrollbars="none">
	        <LinearLayout
	            android:id="@+id/llProductDetailMiddle"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical" >
	        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="10dip"
            android:gravity="center" >

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:background="@drawable/empty_rounded_button_click"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="16dip"
                android:textStyle="bold" 
                android:layout_marginRight="10dip"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnCancell"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/empty_rounded_button_click"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="16dip"
                android:textStyle="bold" 
               />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>