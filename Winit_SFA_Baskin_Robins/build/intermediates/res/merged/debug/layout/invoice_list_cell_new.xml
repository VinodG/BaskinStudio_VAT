<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="65dip"
    android:background="@drawable/cell_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="3dip"
    android:paddingTop="2dip" >

    <TextView
        android:id="@+id/tvVendorName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Test"
        android:textColor="@color/grey"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="test2"
        android:textColor="@color/grey"
        android:textSize="13dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvProductKey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="14dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etInvoice1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:text="05"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etInvoice2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/NetAmt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TotalAmt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/TotalTAXAmt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvDisAmt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/list_title"
            android:textSize="16dip"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivAcceptCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dip"
            android:layout_weight="0"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivAcceptCheckItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dip"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>