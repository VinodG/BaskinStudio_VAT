<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selected"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <View
        android:id="@+id/sideView"
        android:layout_width="5dip"
        android:layout_height="fill_parent"
        android:background="@color/customer_served"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/list_title"
            android:textSize="15dip" />

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
		            android:id="@+id/tvBalanceAmountShow"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center_vertical"
		            android:singleLine="true"
		            android:textColor="@color/list_title"
		            android:textSize="12dip" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                 <TextView
			        android:id="@+id/tvSitenameTitle"
			        android:layout_width="50dip"
			        android:layout_height="wrap_content"
			        android:gravity="left"
			        android:singleLine="true"
			        android:text="Site Id :"
			        android:textColor="@color/list_middle" />
			
			    <TextView
			        android:id="@+id/tvCustomerSite"
			        android:layout_width="60dip"
			        android:layout_height="wrap_content"
			        android:gravity="left"
			        android:singleLine="true"
			        android:textColor="@color/list_middle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:src="@drawable/arro" />

</LinearLayout>