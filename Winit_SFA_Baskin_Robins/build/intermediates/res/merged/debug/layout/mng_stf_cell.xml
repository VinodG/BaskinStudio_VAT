<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="53dip"
    android:background="@drawable/list_item_selected"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:id="@+id/ivServedOrder"
                android:layout_width="5dip"
                android:layout_height="fill_parent"
                android:background="@color/customer_served"
                android:visibility="invisible" 
                android:layout_marginBottom="2dip"/>

            <TextView
                android:id="@+id/tvMngStfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:singleLine="true"
                android:textColor="@color/list_title"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMngStfMemberId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/list_middle"
                android:textSize="14dip" />

            <ImageView
                android:id="@+id/ivInner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:src="@drawable/arro" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSalesmanCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:textColor="@color/list_middle"
            android:textSize="14dip"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivOuter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:src="@drawable/arro"
        android:visibility="gone" />

</LinearLayout>