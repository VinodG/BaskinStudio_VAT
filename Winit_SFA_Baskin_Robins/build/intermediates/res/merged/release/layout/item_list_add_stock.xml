<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llCellClick"
        android:layout_width="fill_parent"
        android:layout_height="42dip" >

        <LinearLayout
            android:layout_width="85dip"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvProductKey"
                android:layout_width="85dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/list_title"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemBatchCode"
                android:layout_width="85dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/blue_dark"
                android:textSize="11dip"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvVendorName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tvExpiryDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/blue_dark"
                android:textSize="11dip"
                android:visibility="gone" />
        </LinearLayout>

        <EditText
            android:id="@+id/etUOM"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etQt"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dip"
            android:background="@drawable/unit_bg"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="9"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="13dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTotalQt"
            android:layout_width="52dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dip"
            android:background="@drawable/unit_bg"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="12dip"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/etInvoice1"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:hint="00"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivAcceptCheckItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDivider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dot_seperator" />

</LinearLayout>