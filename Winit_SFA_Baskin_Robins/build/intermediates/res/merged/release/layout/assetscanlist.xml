<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/topbgbg"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvSelectedItemListHeader"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dip"
            android:text="@string/Product_Quantity"
            android:textColor="@color/white"
            android:textSize="@dimen/customer_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoproductfound"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/No_item_found"
        android:textColor="@color/list_title"
        android:textSize="17dip"
        android:textStyle="bold"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tvNoOrderFound"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:visibility="gone"
        android:text="@string/No_item_found"
        android:textColor="@color/list_middle"
        android:textSize="20dip" />

    <ListView
        android:id="@+id/lvAssetscanList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:layout_weight="0"
        android:background="@drawable/basefooter"
        android:gravity="right"
        android:orientation="horizontal" >

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_base" />
        <Button
            android:id="@+id/btnSubmited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
           android:padding="10dp"
            android:background="@color/transparent"
            android:text="@string/Submit2"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>