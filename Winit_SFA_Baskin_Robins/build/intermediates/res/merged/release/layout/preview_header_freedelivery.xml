<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/previewtop"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:background="@drawable/previewlogo" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/tvMasafiLogoTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="@string/baskin_robbin_title"
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:text="@string/baskin_robbin_address"
                android:textColor="@color/black"
                android:textSize="10dip" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHeaderWithTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smallbg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvOrderPreviewItemName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dip"
            android:text="Item &amp; Description"
            android:textColor="@color/white"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/tvOrderPreviewCases"
            android:layout_width="38dip"
            android:layout_height="wrap_content"
            android:text="UOM"
            android:textColor="@color/white"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/tvOrderPreviewunits"
            android:layout_width="38dip"
            android:layout_height="wrap_content"
            android:text="QTY"
            android:textColor="@color/white"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="38dip"
            android:layout_height="wrap_content"
            android:text="Disc."
            android:textColor="@color/white"
            android:textSize="10dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="10dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="56dip"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="@color/white"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/tvInvoiceAmount"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="Invoice Price"
            android:textColor="@color/white"
            android:textSize="10dip"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>