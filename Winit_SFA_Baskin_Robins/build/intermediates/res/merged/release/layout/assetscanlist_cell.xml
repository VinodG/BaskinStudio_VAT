<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_selected"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivbar_code"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            />
        <ImageView
            android:id="@+id/ivbar_code_noImage"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:visibility="gone"
            android:background="@drawable/no_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvAssetScanItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Chiller (768945)"
                android:maxLines="2"
                android:textColor="@color/list_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAssetScanStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="MASAFI_MW_C"
                android:textColor="@color/list_title" />

            <TextView
                android:id="@+id/tvAssetScanDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:textSize="16dip"
                android:text="@string/Alert1date"
                android:textColor="@color/List_header2" />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/llQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            >
            
             <TextView
                 android:id="@+id/tvQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Quantity"
                android:maxLines="2"
                android:layout_marginBottom="5dip"
                android:textColor="@color/list_title"
                android:textStyle="bold" />
             <TextView
                 android:id="@+id/tvQuantity"
                 android:background="@drawable/smalltextinputbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:maxLines="2"
                android:gravity="center"
                android:textColor="@color/list_title"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>